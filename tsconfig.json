{
  "compilerOptions": {
     // sequelize-typescript 需要es6及以上
    "target": "es6",
    "lib": [
      "esnext"
    ],
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/types"
    // ],
    // sequelize-typescript 需要
    "experimentalDecorators": true,
     // sequelize-typescript 需要
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}